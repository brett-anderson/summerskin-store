.container#main-wrapper
  = render 'shared/header'
  .row
    .white-background#cart-checkout.col-md-5= render 'store/cart'
    .col-md-5.white-background.col-md-offset-1.customer-form-fix
      = form_for :customer, :role => 'form', html: {:id => 'customer-form', :class => ''} do |f|
        .form-group
          = f.label :first_name
          = f.text_field :first_name, placeholder: 'bob'
        .form-group
          = f.label :last_name
          = f.text_field :last_name, placeholder: 'Mackenzie'
        .form-group
          = f.label :address
          = f.text_field :address, placeholder: '123 fake Street'
        .form-group
          = f.label :city
          = f.text_field :city, placeholder: 'Springfield'
        .form-group
          = f.label :province
          = collection_select( :customer, :province_id, @provinces, :id, :name)
        .form-group
          = f.label :postal_code
          = f.text_field :postal_code, placeholder: 'H0H 0H0'
        .form-group
          = f.label :email
          = f.text_field :email, type: 'email'
        .form-group
          = f.submit value: 'Submit Order'

